<UserControl x:Class="rab1.SwordfishXYLineChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:SwordfishCharts="clr-namespace:Swordfish.NET.Charts"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel x:Name="toolPanel" DockPanel.Dock="Top" HorizontalAlignment="Center" Orientation="Horizontal">
            <CheckBox x:Name="showPointsCheckBox" Margin="5">Show points</CheckBox>
            <CheckBox x:Name="dashCheckBox" Margin="5">Dash</CheckBox>
            <CheckBox x:Name="showLinesCheckBox" Margin="5">Show lines</CheckBox>
            <Button x:Name="redrawChartButton" Margin="5">Refresh</Button>
        </StackPanel>
        <SwordfishCharts:ChartControl x:Name="xyLineChart" RenderTransformOrigin="0.5,0.5" Background="White" />
    </DockPanel>
</UserControl>
